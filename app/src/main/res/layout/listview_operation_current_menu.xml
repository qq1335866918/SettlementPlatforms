<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_5"
    android:paddingBottom="@dimen/padding_5"
    android:paddingLeft="@dimen/padding_1"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/im_operation_menu_icon"
        android:layout_weight="0.4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/cai"/>

    <TextView
        android:id="@+id/tx_operation_menu_dish_name"
        android:layout_weight="1.7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:textSize="@dimen/text_size_16"
        android:text=""/>

    <TextView
        android:id="@+id/tx_operation_menu_dish_id"
        android:layout_weight="0.7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_10"
        android:textColor="@color/text_color"
        android:text=""/>

    <TextView
        android:layout_weight="0.2"
        android:layout_width="0dp"
        android:paddingLeft="@dimen/padding_5"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:text="X"/>

    <TextView
        android:id="@+id/tx_operation_menu_dish_count"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:text=""
        android:textColor="@color/text_color" />

    <TextView
        android:id="@+id/tx_operation_menu_total_price"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_14"
        android:text=""/>

</LinearLayout>