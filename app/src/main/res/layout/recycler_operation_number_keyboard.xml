<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_operation_key_7"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="7"
            android:textSize="@dimen/text_size_30"
            android:background="@drawable/selector_button"/>

        <Button
            android:id="@+id/btn_operation_key_8"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="8"
            android:textSize="@dimen/text_size_30"
            android:background="@drawable/selector_button"/>

        <Button
            android:id="@+id/btn_operation_key_9"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="9"
            android:textSize="@dimen/text_size_30"
            android:background="@drawable/selector_button"/>

        <Button
            android:id="@+id/btn_operation_key_backspace"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="←"
            android:textSize="@dimen/text_size_30"
            android:background="@drawable/selector_button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_operation_key_4"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="4"
            android:textSize="@dimen/text_size_30"
            android:background="@drawable/selector_button"/>

        <Button
            android:id="@+id/btn_operation_key_5"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="5"
            android:textSize="@dimen/text_size_30"
            android:background="@drawable/selector_button"/>

        <Button
            android:id="@+id/btn_operation_key_6"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="6"
            android:textSize="@dimen/text_size_30"
            android:background="@drawable/selector_button"/>

        <Button
            android:id="@+id/btn_operation_key_clear"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="C"
            android:textSize="@dimen/text_size_30"
            android:background="@drawable/selector_button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_operation_key_1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="@dimen/text_size_30"
                    android:background="@drawable/selector_button"/>

                <Button
                    android:id="@+id/btn_operation_key_2"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textSize="@dimen/text_size_30"
                    android:background="@drawable/selector_button"/>

                <Button
                    android:id="@+id/btn_operation_key_3"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:textSize="@dimen/text_size_30"
                    android:background="@drawable/selector_button"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_operation_key_0"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:textSize="@dimen/text_size_30"
                    android:background="@drawable/selector_button"/>

                <Button
                    android:id="@+id/btn_operation_key_point"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="."
                    android:textSize="@dimen/text_size_30"
                    android:background="@drawable/selector_button"/>

            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_operation_key_enter"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/enter"
            android:background="@drawable/selector_button"
            android:text=""/>
    </LinearLayout>

</LinearLayout>