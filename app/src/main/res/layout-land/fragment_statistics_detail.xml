<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_30"
        android:layout_marginLeft="@dimen/margin_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/startTime"
            android:layout_marginRight="@dimen/margin_10"/>

        <TextView
            android:id="@+id/tx_statistics_detail_start_time"
            android:layout_width="100dp"
            android:layout_height="@dimen/assistant_date_pick_height"
            android:background="@drawable/date_select_box"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginRight="@dimen/margin_5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stopTime"
            android:layout_marginRight="@dimen/margin_10"/>

        <TextView
            android:id="@+id/tx_statistics_detail_stop_time"
            android:layout_width="100dp"
            android:layout_height="@dimen/assistant_date_pick_height"
            android:background="@drawable/date_select_box"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginRight="@dimen/margin_5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meal_times"
            android:layout_marginRight="@dimen/margin_10"/>

        <Spinner
            android:id="@+id/sp_statistics_detail_meal"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/margin_5"
            android:gravity="center_horizontal"/>

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="@string/shopAssistant"-->
            <!--android:layout_marginRight="@dimen/margin_10"/>-->

        <!--<Spinner-->
            <!--android:id="@+id/sp_statistics_detail_assistant"-->
            <!--android:layout_width="100dp"-->
            <!--android:layout_height="30dp"-->
            <!--android:layout_marginRight="@dimen/margin_5"-->
            <!--android:gravity="center_horizontal"/>-->
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment_method"
            android:layout_marginRight="@dimen/margin_10"/>

        <Spinner
            android:id="@+id/sp_statistics_detail_payment_method"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/margin_5"
            android:gravity="center_horizontal"/>

        <Button
            android:id="@+id/btn_statistics_detail_search"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/assistant_query_height"
            android:background="@drawable/selector_button"
            android:text="@string/search"
            android:textSize="@dimen/text_size_14"
            android:layout_marginLeft="@dimen/margin_30"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_20"
        android:orientation="vertical"
        android:background="@drawable/border_box">

        <LinearLayout
            android:paddingRight="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_5"
            android:layout_marginLeft="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_5"
            android:paddingLeft="@dimen/padding_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/time"/>

            <TextView
                android:layout_weight="1.5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/order_number"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/numder"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/order_amount"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/payment_method"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/pay_type"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_margin="@dimen/margin_2"
            android:background="@color/colorAccent"/>

        <ListView
            android:id="@+id/ls_statistic_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>